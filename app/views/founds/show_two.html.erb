<div class="Found show">
  <h1>Show Found</h1>

    <table summary="Found detail view">
        <tr>
            <th>Name  </th>
            <td><%= @found.found_item_name %></td>
        </tr>
        <tr>
            <th>Description</th>
            <td><%= @found.found_item_desc %></td>
        </tr>
        <tr>
            <th>Contact</th>
            <td><%= @found.found_phone_no %></td>
        </tr>
        <tr>
            <th>Date Found</th>
            <td><%= @found.found_date %></td>
        </tr>
        <tr>
            <th>Place Found</th>
            <td><%= @found.found_place %></td>
        </tr>
    </table>
</div>
