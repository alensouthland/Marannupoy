<head>

<%= link_to("<< View List", {:action => 'list'}, :class => 'back-link') %>
<br><br><br><br>&nbsp;

</head>



<%= link_to("FETCHBACK", {:controller => 'losts', :action => 'home'}, :class => 'home-link') %><br>

<%= form_tag search_results_path, method: 'get' do %>
<th><%= text_field_tag :search_keywords %></th>
    <%= submit_tag " ", :controller => "losts", :action => "show_one", :class => 'qsearch' %>
<% end %>
<br><br><br><br>

<div class = "found-new">
    <p>REPORT AN ITEM AS FOUND</p>

    <%= form_for(:found, :url => {:action => 'create', :class => 'form-css'}) do |f| %>
        <table summary="Lost form fields" align="center">
            <tr>
                <td>Item Name</td>
                <th><%= f.text_field(:found_item_name) %></th>
            </tr>
            <tr>
                <td>Description</td>
                <th><%= f.text_field(:found_item_desc)%></th>
            </tr>
            <tr>
                <td>Contact</td>
                <th><%= f.telephone_field(:found_phone_no) %></th>
            </tr>
                <td>Found Date</td>
                <th><%= f.date_field(:found_date) %></th>
            </tr>
            <tr>
                <td>Found Place</td>
                <th><%= f.text_field(:found_place) %></th>
            </tr>
        </table>

    <div class="form-buttons">
        <%= submit_tag("+", :class => 'submit-link') %>
    </div>

    <% end %>
</div>
