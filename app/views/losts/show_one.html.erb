<style>
    body
    {
        text-align: center;
        background-image: url("https://static.pexels.com/photos/1240/road-street-blur-blurred.jpg");
        background-size: 1920px 1080px;
        background-repeat: no-repeat;
    }

    .back-link
    {
        text-decoration: none;
        font-size: 10px;
        padding: 7px 7px;
        color: white;
        border-radius: 16px;
        font-family: sans-serif;
        background-color: transparent;
        border: 3px solid #FFFFFF;
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
    }

    .back-link:hover
    {
        background-color: white;
        color: #212121;
        -webkit-transition-duration: 0.4s; /* Safari */
        transition-duration: 0.4s;
        cursor: pointer;
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
    }

    td
    {
        font-family: sans-serif;
        color: #263238;
        font-size: 30px;
        border: 3px solid #FFFFFF;
        background-color: white;
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
    }


    th
    {
        font-family: sans-serif;
        color: white;
        font-size: 28px;
    }


    h2
    {
        font-family: sans-serif;
        color: white;
        font-size: 35px;
    }
</style>

<body>
<%= link_to(" <<", {:controller => 'losts', :action => 'list'}, :class => 'back-link') %>
<%= @lost %>


<div class="lost-show">
    <h2>DETAILS</h2>

    <table summary="Lost detail view" align="center">
        <tr>
            <th>Name</th>
            <td><%= @lost.lost_item_name %></td><hr>
        </tr>
        <tr>
            <th>Description</th>
            <td><%= @lost.lost_item_desc %></td><hr>
        </tr>
        <tr>
            <th>Contact</th>
            <td><%= @lost.lost_phone_no %></td><hr>
        </tr>
        <tr>
            <th>Date Lost</th>
            <td><%= @lost.lost_date %></td><hr>
        </tr>
        <tr>
            <th>Place Lost</th>
            <td><%= @lost.lost_place %></td>
        </tr>
    </table>
</div>
</body>
